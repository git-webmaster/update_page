                        // Panel :: Start
                        .panel.panel--grey
                            .panel__container
                                .panel__head

                                    .panel__head-group

                                        figure.panel__icon
                                            +sprite('icon-panel-password')

                                        h2.panel__title Сменить пароль

                                .panel__body

                                    .panel__settings
                                        .panel__settings-group

                                            .panel__settings-row
                                                label.ui-label Старый пароль
                                                .ui-input-group
                                                    button.ui-input-action
                                                        +sprite('icon-hide')
                                                    input(type="password" placeholder="").ui-input

                                            .panel__settings-row
                                                label.ui-label Новый пароль
                                                .ui-input-group
