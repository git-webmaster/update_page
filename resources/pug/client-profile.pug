block main

    // Update :: Start
    .l

        .l__head(role="banner")
            .container-fluid


                p.l__topbar Настройки профиля


        .l__body
            .container-fluid


                // Scrolltop :: Start
                button.scrolltop.js-scrolltop(aria-label="Прокрутить вверх")
                    +sprite('icon-scrolltop')
                // Scrolltop :: End


                .l__wrapper.js-sticky-container
                    .l__content
    
                        

                        

                        // Panel :: Start
                        .panel.panel--grey
                            .panel__container
                                .panel__head

                                    .panel__head-group

                                        figure.panel__icon
                                            +sprite('icon-panel-info')

                                        h2.panel__title Основная информация

                                .panel__body

                                    .panel__settings
