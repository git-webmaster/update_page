                        // Panel :: Start
                        .panel.panel--grey
                            .panel__container
                                .panel__head

                                    .panel__head-group

                                        figure.panel__icon
                                            +sprite('icon-panel-avatar')

                                        h2.panel__title Аватар

                                .panel__body

                                    .panel__settings
