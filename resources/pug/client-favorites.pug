                                    .panel__comment-content

                                        .panel__write
                                            .ui-edit
                                                figure.ui-edit__icon
                                                    +sprite('icon-edit-notice')
                                                input(type="text" placeholder="Написать заметку (её увидите только вы)").ui-edit__input

                                        .panel__company

                                            p.panel__company-title
                                                a(href="#").ui-link.ui-link--underline.ui-link--blue Ренессанс страхование

                                            ul.panel__company-list
                                                li
                                                    +sprite('icon-comments')
                                                    | 18 отзывов
                                                li
                                                    +sprite('icon-phone')
                                                    | +7 (921) 19-15-105<br>+7 (953) 20-11-155  
                                                li
                                                    +sprite('icon-time')
                                                    | Работает сегодня: 09:00 - 18:30
                                                li
                                                    +sprite('icon-location')
                                                    | Санкт-Петербург, Зелёный проспект, 20

                                    
                                    button.panel__delete
                                        +sprite('icon-delete')
                        // Panel :: End


                        // Panel :: Start
                        .panel.panel--delete

                            .panel__topbar
                                figure.panel__topbar-icon
                                    +sprite('icon-feedback')
                                span.panel__topbar-title
                                    a(href="#").ui-link.ui-link--underline.ui-link--blue Ренессанс страхование

                            .panel__comment

                                .panel__comment-container
                                    .panel__comment-sidebar

                                        .panel__comment-user
                                            p.panel__comment-user-name
                                                a(href="#") Назарий О.

                                        p.panel__comment-date 16 дек. 2018 #[span.is-md-visible в 15:04]

                                        ul.panel__comment-list
                                            li
                                                img(src="images/img-location-ru.png" alt="" aria-hidden="true")
                                                span.is-md-visible Санкт-Петербург
                                            li
                                                span.icon-mark.icon-mark--green 4
