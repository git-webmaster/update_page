                                                            +sprite('icon-help')

                        // Panel Sorting :: End

                .l__wrapper.js-sticky-container

                    .l__content


                        // Panel :: Start
                        .panel.panel--delete
                            .panel__comment
                                .panel__comment-container
                                    .panel__comment-sidebar

                                        figure.panel__comment-picture
