                        // Panel :: End


                        // Panel Sorting :: Start
                        .panel
                            .panel__sorting
                                form(action="#")

                                    .ui-input-group
                                        .row.row-gutter-10
                                            .col-xs-auto
                                        
                                                .ui-select.ui-select--46
                                                    select.js-select
                                                        option Новые сначала
                                                        option Новые вконце

                                            .col-xs-auto

                                                .ui-input-group
